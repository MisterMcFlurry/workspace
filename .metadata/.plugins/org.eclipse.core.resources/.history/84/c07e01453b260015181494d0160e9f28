	public ArrayList BuildPermutations(ArrayList inList, int maxSides, int maxColours)
	{
		inlist = BuildPermutations(inList, maxSides, maxColours, "");
		
		return inList;
	}

	public void BuildPermutations(ArrayList inList, int maxSides, int maxColours, String entry)
	{
		int i=0;
		while (i<maxColours)
		{
			if(entry.length()+1<maxSides)
			{
				BuildPermutations(inList,maxSides,maxColours,entry+i);
			}
			else
			{
				inList.add(entry+i);
			}
			
		}
			i++;
	}
}

